<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        card_view:cardElevation="5dp"
        >
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/list_card_view">
        <TextView
                android:id="@+id/title_list_holder"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textSize="17sp" android:text="Titulo" android:textStyle="bold"/>
        <TextView android:id="@+id/size_list_holder" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="0 elements"
                  android:textSize="14sp"
                  android:layout_below="@id/title_list_holder" android:textStyle="italic"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>